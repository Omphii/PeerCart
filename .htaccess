# PeerCart2 .htaccess
Options -Indexes -MultiViews
RewriteEngine On

# Set base for rewrites
RewriteBase /PeerCart2/

# Don't rewrite existing files, directories, or assets
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Exclude assets and uploads from routing
RewriteRule ^(assets|uploads|includes)/(.*)$ - [L]

# Route everything else to pages directory (except root)
RewriteRule ^(?!pages/)(.+)$ pages/$1.php [L,QSA]

# Redirect root to home.php
RewriteRule ^$ pages/home.php [L]